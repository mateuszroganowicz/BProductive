<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EB3434</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeAppHappy" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/happyAlt</item>
        <item name="android:textColor">@color/happyText</item>
        <item name="android:background">@color/happySecondary</item>
    </style>

    <style name="ThemeAppSad" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/sadPrimary</item>
        <item name="android:textColor">@color/sadText</item>
        <item name="android:background">@color/sadSecondary</item>
    </style>

    <style name="ThemeAppStressed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/stressedPrimary</item>
        <item name="android:textColor">@color/stressedText</item>
        <item name="android:background">@color/stressedSecondary</item>
    </style>

    <style name="ThemeAppNormal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/normalPrimary</item>
        <item name="android:textColor">@color/normalText</item>
        <item name="android:background">@color/normalSecondary</item>
    </style>

    <style name="ThemeAppConfident" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/confidentPrimary</item>
        <item name="android:textColor">@color/confidentText</item>
        <item name="android:background">#C9D8D2</item>
    </style>

    <style name="ThemeAppAngry" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/angryPrimary</item>
        <item name="android:textColor">@color/angryText</item>
        <item name="android:background">@color/angrySecondary</item>
    </style>

</resources>